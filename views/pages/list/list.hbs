<!DOCTYPE html>
<html lang="en">
    {{> pagehead}}

    <body>
        {{> nav}}

        {{#unless user}}
            {{!-- If user is not logged in they get sent back to the home page --}}
            <script> window.location.replace("/") </script>
        {{/unless}}

        <div id="container" class="fl-col">
            <div id="wrapper" class="fl-col" style="display: none;">
                <div id="nr-select" class="fl-col rel" style="display: none;">
                    {{> exit_button}}
                    <h2>Create a new recipe</h2>
                    <h3>Enter a URL from a recipe you like</h3>
                    <p style="font-size: small;">Supported Website: allrecipes.com, fifteenspatulas.com</p>
                    <input type="text" name="" id="in-url" placeholder="https://www">
                    <input id="sub_URL" type="button" value="Submit">
                    <h3>or</h3>
                    {{> add_recipe_button title="Create Your Own Recipe" clickEvent="openView('#nr-container')"}}
                </div>

                {{> create_recipe}}
            </div>

            {{#if recipes}}

            {{> add_recipe_button title="Add New Recipe" clickEvent="openView('#nr-select')"}}

            <select id="filter" onclick="changeFilter()"></select>

            {{!-- add short and full url --}}
            {{#each recipes}}
                {{> recipe_card id=_id title=name auth=author cuis=cuisine ty='' link=url prep=time.prep cook=time.cooking serving=servings calories=''}}
            {{/each}}
            
            <textarea name="" id="" cols="30" rows="10" style="height: 500px;">
                {{recipes}}
            </textarea>

            {{else}}
            <div class="fl-col new-user">
                {{!-- Add a page view for a new user with no saved recipes --}}
                <h1>No recipes found.</h1>
                <span></span>
                <h2>Click the button to create your first recipe!</h2>
                {{> add_recipe_button title="Add New Recipe" clickEvent="openView('#nr-select')"}}
                <span></span>
                <img src="/assets/images/arrows.png" alt="arrows" id="arrows" draggable="false">
            </div>
            {{/if}}

            {{!-- Add a page view for a user with saved recipes --}}
            {{!-- This view should pull from the database and use the info to display recipe cards --}}

            {{!-- Form for selecting URL or Create New Recipe --}}

            {{!-- Form for creating new recipes --}}

            {{!-- Add a page view for viewing saved recipes --}}
            
            {{!-- This view should pull from the database to fill out the data --}}
        </div>

        {{> footer}}
    </body>
</html>